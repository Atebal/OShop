                    }
                    else {
                        @String.Format(Model.NumberFormat, "{0:C}", Model.Cart.ItemsTotal())
                    }
                </td>
            </tr>
            <tr class="total">
                <td colspan="4">
                    @T("Shipping")
                </td>
                <td>
                    @if (Model.VatEnabled) {
