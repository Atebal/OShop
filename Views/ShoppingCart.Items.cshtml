                    }
                    else {
                        @String.Format(Model.NumberFormat, "{0:C}", shippingOption.Option.Price)
                    }
                </td>
            </tr>
        }*@
        <tr class="total">
            <td colspan="4">
                @T("Total")
            </td>
            <td>
                @String.Format(Model.NumberFormat, "{0:C}", ((ShoppingCart)Model.Cart).VatIncludedCartTotal())
            </td>
        </tr>
    </tfoot>
</table>
