@using System.Globalization
@using OShop.Models
@using OShop.Helpers

@{
    CultureInfo cultureInfo = new CultureInfo(WorkContext.CurrentCulture);
    VatRecord vat = Model.Vat;
    ProductPart product = Model.ContentPart;
}

@if (vat != null) {
    <span class="vatprice">@String.Format(cultureInfo, "{0:C}", vat.GetVatIncludedPrice(product.UnitPrice))</span>
}
